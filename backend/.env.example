# Configuration pour PythonAnywhere
# Copier ce fichier en .env et remplir les valeurs

# Debug mode (False en production)
DEBUG=False

# Secret key (générer une nouvelle clé sécurisée)
# python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=votre-secret-key-super-securisee-ici-changez-moi

# Hosts autorisés (remplacer par votre username PythonAnywhere)
ALLOWED_HOSTS=votre-username.pythonanywhere.com,localhost,127.0.0.1

# Base de données (SQLite par défaut)
DATABASE_ENGINE=django.db.backends.sqlite3
DATABASE_NAME=db.sqlite3
